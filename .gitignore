# ignore everything in the "wp-content" directory, except:
# "mu-plugins", "plugins", "themes" directory
wp-content/*
!wp-content/mu-plugins/
!wp-content/plugins/
!wp-content/themes/
!wp-content/uploads/

# ignore these plugins
wp-content/plugins/hello.php

# ignore these plugins
wp-content/plugins/akismet

# ignore specific themes
wp-content/themes/twenty*/

wp-content/themes/ekransystem/assets/css/main.css
wp-content/themes/ekransystem/assets/css/main.css.map

wp-content/themes/ekransystem/assets/js/main.bundle.js
wp-content/themes/ekransystem/assets/js/main.bundle.js.map
wp-content/themes/ekransystem/assets/js/main.bundle.js.LICENSE.txt

wp-content/uploads/*

# ignore node dependency directories
node_modules/
certs/

# ignore log files and databases
*.log
*.sql
*.sqlite
*.env